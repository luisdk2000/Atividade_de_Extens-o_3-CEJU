<body>
    <section class="container">
        <div class="col-md-8 mx-auto cursos-section" id="cursos">
            <h1>Confira os nossos cursos!</h1>
            {{#each cursos}}
            <hr>
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-6">
                        <img src="http://localhost:3000/img/cursos/{{imagem_principal}}"
                            class="img-fluid rounded-start imagem-principal" alt="{{titulo}}">
                    </div>
                    <div class="col-md-6">
                        <div class="p-3">
                            <h5>{{titulo}}</h5>
                            <p>{{conteudo}}</p>
                        </div>
                    </div>
                </div>

                <!-- Carrossel de imagens secundárias -->
                <div class="secundarias-control">

                    <div class="secundarias">
                        {{#each imagens_internas}}
                        <img src="http://localhost:3000/img/cursos/{{this}}" class="img-fluid" alt="Imagem interna"
                            data-bs-toggle="modal" data-bs-target="#modalImagem-{{@../index}}-{{@index}}">
                        {{/each}}
                    </div>

                </div>
                <!-- Fim do carrossel -->

            </div>

            {{#each imagens_internas}}
            <div class="modal fade" id="modalImagem-{{@../index}}-{{@index}}" tabindex="-1"
                aria-labelledby="modalLabel-{{@../index}}-{{@index}}" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalLabel-{{@../index}}-{{@index}}">Imagem Interna</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <img src="http://localhost:3000/img/cursos/{{this}}" class="img-fluid" alt="Imagem interna">
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/each}}
        </div>
        <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="secundarias">
                        {{#each imagens_internas}}
                        <img src="http://localhost:3000/img/cursos/{{this}}" class="img-fluid img-secundaria"
                            alt="Imagem interna" data-bs-toggle="modal"
                            data-bs-target="#modalImagem-{{@../index}}-{{@index}}">
                        {{/each}}
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <i class="bi bi-chevron-left"></i>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <i class="bi bi-chevron-right"></i>
            </button>
    </section>
    </div>

    <!-- Footer -->
    <footer class="text-center text-lg-start bg-dark text-light" id="rodape">
