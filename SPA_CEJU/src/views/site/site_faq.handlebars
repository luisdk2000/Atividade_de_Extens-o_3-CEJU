<body>
  <section id="perguntas" class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Perguntas Frequentes</h2>
            <div class="accordion" id="perguntaAccordion">
                {{#each faqs}}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading{{@index}}">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse{{@index}}" aria-expanded="true"
                            aria-controls="collapse{{@index}}">
                            {{titulo}}
                        </button>
                    </h2>
                    <div id="collapse{{@index}}" class="accordion-collapse collapse {{#if @first}}show{{/if}}"
                        aria-labelledby="heading{{@index}}" data-bs-parent="#perguntaAccordion">
                        <div class="accordion-body">
                            {{resposta}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
